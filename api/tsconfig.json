{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../shared/*"],
      "@shared": ["../shared"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
